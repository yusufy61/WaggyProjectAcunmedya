@model Product

@{
    ViewData["Title"] = "Ürün Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="ProductId"/>
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
    <label>Ürün Görseli</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <label>Ürün Fiyatı</label>
    <input type="number" asp-for="Price" class="form-control" />
    <br />
    <label>Puanı</label>
    <input type="number" asp-for="Review" class="form-control" />
    <br />
    <label>Kategori</label>
    <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
        <option>Kategori Seçiniz</option>
    </select>
    <br />

    <button class="btn btn-primary"><i class="fa fa-save"></i>Güncelle</button>

</form>