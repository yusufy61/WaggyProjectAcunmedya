@model List<Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


@{
    int count = 0;
}

<table class="table table-bordered tabletable-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<br />
<a href="/Category/CreateCategory" class="btn btn-primary">Yeni Kategori</a>