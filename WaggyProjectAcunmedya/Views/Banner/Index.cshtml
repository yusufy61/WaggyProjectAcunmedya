@model List<Banner>
@{
    ViewData["Title"] = "Banner List";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

@{
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Görsel</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;


        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl" style="width: 150px; height: 150px; object-fit: cover; border-radius: 6px;" /></td>
            <td>
                <a onclick="youSure(@item.BannerId)" class="text-white btn btn-danger">  Sil  <i class="ti ti-trash"></i> </a>
                <a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-info">Güncelle <i class="ti ti-pencil"></i> </a>
            </td>
        </tr>
    }


</table>

<br />
<a href="/Banner/CreateBanner" class="btn btn-primary"> Yeni Afiş <i class="ti ti-circle-plus align-middle"></i></a>

<script>
    function youSure(id){

      Swal.fire({
      title: "Emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet, sil!",
      cancelButtonText: "İptal!"
    }).then((result) => {
      if (result.isConfirmed) {

        window.location.href="/Banner/DeleteBanner/"+id;
      }
    });
    }

</script>