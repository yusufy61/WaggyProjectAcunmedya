@model Banner
@{
    ViewData["Title"] = "Afiş Güncelle";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Afiş Güncelle</h2>

<form method="post">

    <label>Başlık*</label>
    <input type="text" asp-for="Title" class="form-control" required />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />

    <label>Açıklama*</label>
    <input type="text" asp-for="Description" class="form-control" required />
    <span asp-validation-for="Description" class="text-danger"></span>
    <br />

    <label>Görsel Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <br />
    <button class="btn btn-primary">Kaydet <i class="ti ti-device-floppy"></i></button>

</form>