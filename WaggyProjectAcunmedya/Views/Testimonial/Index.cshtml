@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>Referanslar</h2>



<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Yorum</th>
        <th>İşlemler</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;


        <tr>
            <th>@count</th>
            <td>@item.Name</td>
            <td>@item.Comment</td>
            <td>
                <a onclick="youSure(@item.TestimonialId)" class="text-white btn btn-danger">  Sil  <i class="ti ti-trash"></i> </a>
                <a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-info">Güncelle <i class="ti ti-pencil"></i> </a>
            </td>
        </tr>
    }


</table>

<br />
<a href="/Testimonial/CreateTestimonial/" class="btn btn-primary"> Yeni Referans <i class="ti ti-circle-plus align-middle"></i></a>


<script>
    function youSure(id){

      Swal.fire({
      title: "Emin misiniz?",
      text: "Bu işlemi geri alamazsınız!",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#3085d6",
      cancelButtonColor: "#d33",
      confirmButtonText: "Evet,sil!",
      cancelButtonText: "İptal!"
    }).then((result) => {
      if (result.isConfirmed) {

        window.location.href="/Testimonial/DeleteTestimonial/"+id;
      }
    });
    }

</script>